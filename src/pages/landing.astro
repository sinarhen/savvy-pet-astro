
---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Savvy Pet - Pet grooming business the Savvy way">
	<main class="min-h-screen bg-[var(--white)]">
		<!-- Header -->
		<header class="bg-[var(--white)] border-b border-[var(--grey-00)]">
			<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<div class="text-2xl font-bold text-[var(--main-text)]">savvy pet</div>
					</div>
					<div class="hidden md:block">
						<div class="ml-10 flex items-baseline space-x-8">
							<a href="#" class="text-[var(--grey-04)] hover:text-[var(--main-text)] px-3 py-2 text-sm font-medium">Features</a>
							<a href="#" class="text-[var(--grey-04)] hover:text-[var(--main-text)] px-3 py-2 text-sm font-medium">Pricing</a>
							<a href="#" class="text-[var(--grey-04)] hover:text-[var(--main-text)] px-3 py-2 text-sm font-medium">About</a>
							<a href="#" class="text-[var(--grey-04)] hover:text-[var(--main-text)] px-3 py-2 text-sm font-medium">Contact</a>
						</div>
					</div>
					<div class="flex items-center space-x-4">
						<button class="text-[var(--grey-04)] hover:text-[var(--main-text)] px-3 py-2 text-sm font-medium">
							Sign In
						</button>
						<button class="bg-[var(--blue-01)] text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-[var(--blue-02)] transition-colors">
							Get Started
						</button>
					</div>
				</div>
			</nav>
		</header>

		<!-- Main Content Area - Ready for new design -->
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
			<div class="text-center">
				<h1 class="text-4xl font-bold text-[var(--main-text)] mb-4">
					Welcome to Savvy Pet
				</h1>
				<p class="text-lg text-[var(--grey-04)] max-w-2xl mx-auto">
					Ready to implement the new design from Figma with proper design tokens and Tailwind CSS.
				</p>
			</div>
		</div>
	</main>
</Layout>