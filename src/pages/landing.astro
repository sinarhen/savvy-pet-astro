
---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import EverythingInOne from '../components/EverythingInOne.astro';
import Card from '../components/Card.astro';
---

<Layout title="Savvy Pet - Pet grooming business the Savvy way">
	<Hero />
	<EverythingInOne />
	
	<!-- About Section -->
	<section class="box-border content-stretch flex flex-col gap-16 items-center justify-start px-[135px] py-[119px] relative size-full">
				<div class="box-border content-stretch flex flex-col gap-4 items-start justify-start p-0 relative shrink-0 w-full">
					<div class="font-family-mona font-bold leading-[0] not-italic relative shrink-0 text-[#242c39] text-[52px] text-center w-full">
						<p class="block leading-[62px]">
							One Account. Every Device. Total Control.
						</p>
					</div>
				</div>
			
			<!-- Desktop/Mobile Section -->
				<Card>
					<div class="box-border content-stretch flex flex-col gap-[15px] items-start justify-center p-0 relative self-stretch shrink-0 w-[424px]">
						<div class="box-border content-stretch flex flex-col gap-9 items-start justify-start p-0 relative shrink-0 w-full">
							<div class="box-border content-stretch flex flex-col gap-6 items-start justify-start leading-[0] not-italic p-0 relative shrink-0 text-left w-full">
								<div class="font-['Mona_Sans',_sans-serif] font-semibold relative shrink-0 text-[#242c39] text-[48px] w-full">
									<p class="block leading-none">
										Use Savvy Pet on Laptop, Tablet or Mobile
									</p>
								</div>
								<div class="font-['Mona_Sans',_sans-serif] font-normal leading-[30px] relative shrink-0 text-[#656689] text-[16px] w-full">
									<p class="block mb-0">Savvy Pet works seamlessly across desktop, tablet, and mobile—so you can manage appointments, </p>
									<p class="block">
										check your schedule, and stay in control from anywhere.
									</p>
								</div>
							</div>
						</div>
					</div>
					<div class="basis-0 bg-[#ddf0ff] grow h-[460px] min-h-px min-w-px overflow-clip relative rounded-3xl shrink-0">
						<div class="absolute contents left-[-63px] top-[47px]">
							<div class="absolute bottom-[16.96%] left-[-10.19%] right-[1.94%] top-[78.56%]">
								<div class="absolute bottom-[-19.38%] left-[-0.6%] right-[-0.6%] top-[-19.38%]">
									<img alt="" class="block max-w-none size-full" loading="lazy" src="/8e56288f0fea687b2c65532b3da4236b1a088d76.svg" />
								</div>
							</div>
							<div class="absolute bottom-[18.92%] contents left-[-0.83%] right-[9.56%] top-[10.22%]">
								<div class="absolute bottom-[21.3%] left-[4.85%] right-[14.89%] top-[10.22%]">
									<img alt="" class="block max-w-none size-full" src="/46d8c84cb12df67d228501c92517a47aa3e9729a.svg" />
								</div>
								<div class="absolute bottom-[21.54%] left-[5.02%] right-[15.21%] top-[10.7%]">
									<img alt="" class="block max-w-none size-full" src="/26829aa9b17d8d43354e748db9cfdb4e8a83c055.svg" />
								</div>
								<div class="absolute bottom-[22.93%] left-[12.75%] right-[23.9%] top-[73.88%]">
									<img alt="" class="block max-w-none size-full" loading="lazy" src="/ff87c88bb4a4f8c0b79df859e97374d04b0dbd09.svg" />
								</div>
								<div class="absolute bottom-[25.83%] left-[5.02%] right-[15.21%] top-[10.93%]">
									<img alt="" class="block max-w-none size-full" src="/20043e9a59c608738b4c0f6427cdfc166a468a6c.svg" />
								</div>
								<div class="absolute bottom-[26.31%] left-[5.18%] right-[15.37%] top-[11.17%]">
