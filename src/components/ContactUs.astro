---
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button.tsx";
import { Input } from "@/components/ui/input.tsx";

// Background decoration assets
// import decorationSvg1 from "@/images/4737cd537277f723e97ff2b59a3b0656e14a9f83.svg";
// import decorationSvg2 from "@/images/da924015bca79a7c471b0c180f80177bb62780c9.svg";
// import decorationSvg3 from "@/images/fa4a221b33bd22aae7cf0dedd90c6e062975ea15.svg";
// import decorationSvg4 from "@/images/773fb7ce4f5b733621b7828cf6166888149a3d1c.svg";
